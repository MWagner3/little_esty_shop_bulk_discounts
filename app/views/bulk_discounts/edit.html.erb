<%= form_with url: "/merchant/#{@merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |f| %>
  <%= f.label "Percentage Discounted " %>
  <%= f.text_field :percentage_discount, value: @bulk_discount.percentage_discount %>
  <%= f.label "Item Threshold" %>
  <%= f.text_field :quantity_threshold, value: @bulk_discount.quantity_threshold %>
  <%= f.submit "Submit" %>
<% end %>
